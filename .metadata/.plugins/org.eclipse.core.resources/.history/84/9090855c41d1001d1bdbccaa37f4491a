<script type="text/javascript">

$(document).ready(function(){
	buildCalendar();
	getSettle();
	
})

	
function buildCalendar(){

	var date = new Date();
	
	var calendarYear = date.getFullYear();		// 현재 연도 구하기
	var calendarMonth = date.getMonth();	// 현재 월 구하기(월은 0부터 시작이므로 실제월보다 -1 차이가 남)
	var calendarToday = date.getDate();			// 현재 날짜 구하기
	
	var firstDate = new Date(calendarYear, calendarMonth, 1);		// 요일, 월, 일, 연, 시간 표기
	var lastDate = new Date(calendarYear, calendarMonth + 1, 0);	// 요일, 월, 일, 연, 시간 표기
	
	var firstDay = firstDate.getDay();	// 1일의 요일
	var lastDay = lastDate.getDay();	// 마지막날의 요일
	lastDate = lastDate.getDate();
	
	alert(firstDate + ', ' + lastDate);
	
}



</script>


<title>자산 현황</title>

